meta {
  name: Create Store
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/stores
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{accessToken}}
}

body:json {
  {
    "name": "Store 1",
    "slug": "store-1"
  }
}

script:post-response {
  if (res.status === 201) {
    bru.setEnvVar("storeId", res.body.store._id);
  }
}
