meta {
  name: Create Staff
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/stores/{{storeId}}/staff
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{accessToken}}
}

body:json {
  {
    "name": "Staff 1",
    "staffId": "staff1",
    "password": "123456",
    "role": "staff"
  }
}

script:post-response {
  if (res.status === 201) {
      // res.body.staff might contain _id
      bru.setEnvVar("staffDbId", res.body.staff._id);
  }
}
